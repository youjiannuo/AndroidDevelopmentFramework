<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent"
    android:background="@color/transparent">

    <LinearLayout
        style="@style/height_wrap_width_match"
        android:background="@color/transparent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/topTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yn_bg_radius_3_white_rect"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/title"
                style="@style/wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingMultiplier="1.3"
                android:text="标题"
                android:textColor="@color/yn_font_remind_color_normal"
                android:textSize="20sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message"
            style="@style/height_wrap_width_match"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="20dp"
            android:paddingTop="22dp"
            android:paddingRight="20dp"
            android:paddingBottom="33dp"
            android:textColor="@color/yn_font_remind_color_normal"
            android:textSize="18sp" />

        <TextView style="@style/yn_remind_line_vertical" />

        <LinearLayout
            style="@style/height_wrap_width_match"
            android:layout_height="44dp"
            android:background="@color/alpha"
            android:orientation="horizontal">

            <Button
                android:id="@+id/leftButton"
                style="@style/yn_alter_dialog_button_left"
                android:text="是" />

            <TextView
                android:id="@+id/line1"
                style="@style/yn_remind_line_horizontal" />

            <Button
                android:id="@+id/centerButton"
                style="@style/yn_alter_dialog_button_center"
                android:text="否" />

            <TextView
                android:id="@+id/line2"
                style="@style/yn_remind_line_horizontal" />

            <Button
                android:id="@+id/rightButton"
                style="@style/yn_alter_dialog_button_right"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>